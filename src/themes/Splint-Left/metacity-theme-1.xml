             x="0" y="0" width="width-1" height="height-1"/>
  <rectangle color="gtk:fg[NORMAL]" filled="false"
             x="0" y="0" width="width-1" height="height-1"/>
  <line color="gtk:fg[NORMAL]" width="2"
        x1="0" y1="1" x2="width" y2="1"/>
</draw_ops>

<draw_ops name="restore_button">
